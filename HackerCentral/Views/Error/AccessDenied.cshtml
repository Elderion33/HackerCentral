@model HackerCentral.Models.AccessDenied

@{
    ViewBag.Title = "Access Denied";
}

<div class="container">
    <div class="hero-unit">
        <h2>Access Denied</h2>
        <div class="alert alert-error">
            You are unauthorized to access "@Model.Resource". Only users with the role(s) "@Model.Roles" can access this resource.
        </div>
    </div>
</div>