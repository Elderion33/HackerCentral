@model HackerCentral.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl, @class="form-signin"}))
{
    @Html.AntiForgeryToken()

    
    <h2 class="form-signin-heading">Please sign in</h2>
    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Email address", @class = "input-block-level", type = "text" })
    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "input-block-level", type = "password" })
    @Html.ValidationSummary(true)
    <label class="checkbox">
        @Html.CheckBoxFor(m => m.RememberMe) Remember me
    </label>
    <button class="btn btn-large btn-primary" type="submit">Sign in</button>
    
}

@section Styles {
    <style type="text/css">
        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
               -moz-border-radius: 5px;
                    border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
               -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                    box-shadow: 0 1px 2px rgba(0,0,0,.05);
          }
          .form-signin .form-signin-heading,
          .form-signin .checkbox {
            margin-bottom: 10px;
          }
          .form-signin input[type="text"],
          .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
          }
    </style>
}
